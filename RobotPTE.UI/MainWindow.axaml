<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonia3d="clr-namespace:Ab4d.SharpEngine.AvaloniaUI;assembly=Ab4d.SharpEngine.AvaloniaUI"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RobotPTE.UI.MainWindow"
        Title="RobotPTE">
    <Grid ColumnDefinitions="*,300">
        <avalonia3d:SharpEngineSceneView Grid.Column="0" />
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Path List &amp; Management" FontWeight="Bold" />
            <ListBox Margin="0,5,0,0" Height="200">
                <!-- Path items will go here -->
            </ListBox>
            <Button Margin="0,5,0,0" Content="+ Add Path Sequence" />
            <TextBlock Text="Path Details &amp; Properties" FontWeight="Bold" Margin="0,10,0,0" />
            <!-- Property editors will go here -->
        </StackPanel>
    </Grid>
</Window>
